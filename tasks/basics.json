        { "type": "path_exists", "path": "{DESKTOP}/AgentX_Test" },
        { "type": "is_directory", "path": "{DESKTOP}/AgentX_Test" }
      ],
      "points": 1
    },
    {
      "id": "files_02_create_notes",
      "category": "files",
      "instruction": "Inside Desktop/AgentX_Test create notes.txt with exact text: hello agentbeats",
      "time_limit_sec": 180,
      "start_state": { "reset_profile": "clean_basic" },
      "checks": [
        { "type": "file_contains_exact", "path": "{DESKTOP}/AgentX_Test/notes.txt", "text": "hello agentbeats" }
      ],
      "points": 1
    }
  ]
}

